hexMap := '0123456789ABCDEF'.split('');

encode := -> input {
    bytes := input.toCodeUnits();
    output := [];
    i := 0;
    len := bytes.length();
    while (i < len) {
        byte := bytes[i];
        output.push(String.from((byte / 16).truncate()));
        output.push(hexMap[byte % 16]);
        i = i + 1;
    }
    return output.join('');
};
